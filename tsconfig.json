{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": [".serverless", "build", "node_modules"]
}
